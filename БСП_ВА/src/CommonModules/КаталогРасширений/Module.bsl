Процедура ВыполнитьРучноеОбновлениеРасширенийОбласти(Знач Расширения) Экспорт 
	
	УстановитьПривилегированныйРежим(Истина);
	ВсегоРасширений = Расширения.Количество();
	
	Для Каждого СтрокаДанных Из Расширения Цикл
		
		ТекущийПрогресс = Расширения.Найти(СтрокаДанных);
		
		СтруктураДанных = Новый Структура;
		СтруктураДанных.Вставить("ТекущееРасширение", СтрокаДанных.Наименование);
		СтруктураДанных.Вставить("Прогресс", Окр((ТекущийПрогресс / ВсегоРасширений) * 100, 3));
		
		Сообщение = Новый СообщениеПользователю;
		Сообщение.Текст = ПреобразоватьДанныеВJSON(СтруктураДанных);
		Сообщение.Сообщить();
		
		РасширенияВМоделиСервиса.АктуализацияИспользуемогоРасширения(СтрокаДанных.ИдентификаторИспользуемогоРасширения);
		
		СтруктураДанных.Прогресс = Окр(((ТекущийПрогресс + 1) / ВсегоРасширений) * 100, 3);
		Сообщение = Новый СообщениеПользователю;
		Сообщение.Текст = ПреобразоватьДанныеВJSON(СтруктураДанных);
		Сообщение.Сообщить();
		
	КонецЦикла;
			
КонецПроцедуры

