			НСтр("ru = 'Вставка отсутствует или не соответствует образцу: %1.'"),
			ТекстПараметра);
		
		СтруктураОбъекта.Корректность = Ложь;
		СтруктураОбъекта.ОписаниеОшибки = СтруктураОбъекта.ОписаниеОшибки + "|" + ТекстОшибки;
		
