		КонецЦикла;
		
		ДанныеПрав.object.Добавить(ОписаниеОбъекта);
		
	КонецЦикла;
	
	Запись = Новый ЗаписьXML;
	Запись.ОткрытьФайл(ИмяФайлаРоли, "UTF-8");
