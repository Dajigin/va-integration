КонецФункции

Функция ИзменитьТипРеквизита(ДокументDOM, ИмяРеквизита, ТипРеквизитаСтрокой)
	
	ТипПоОбразцу = ОписаниеТиповИзСтроки(ТипРеквизитаСтрокой);
	
	Выражение = "/xmlns:MetaDataObject/xmlns:Catalog/xmlns:ChildObjects/xmlns:Attribute/xmlns:Properties/xmlns:Name[text()='" + ИмяРеквизита + "']/parent::*/xmlns:Type";
	Результат = ВычислитьВыражениеXPath(Выражение, ДокументDOM);
	УзелТипов = Результат.ПолучитьСледующий();
	
	Выражение    = Выражение + "/v8:Type";
	Результат    = ВычислитьВыражениеXPath(Выражение, ДокументDOM);
	ДочернийУзел = Результат.ПолучитьСледующий();
	Пока ДочернийУзел <> Неопределено Цикл
		
		УзелТипов.УдалитьДочерний(ДочернийУзел);
		
		Результат    = ВычислитьВыражениеXPath(Выражение, ДокументDOM);
		ДочернийУзел = Результат.ПолучитьСледующий();
		
	КонецЦикла;
	
	Для Каждого Тип Из ТипПоОбразцу.Типы() Цикл
		
		ТипXML  = XMLТип(Тип);
		Префикс = "cfg";
		Если ЗначениеЗаполнено(ТипXML.URIПространстваИмен) Тогда
			Префикс = ДокументDOM.НайтиПрефикс(ТипXML.URIПространстваИмен);
		КонецЕсли;
		
		ИмяТипаXML = Префикс + ":" + ТипXML.ИмяТипа;
		
		ДобавитьСвойствоУзлаDOM(ДокументDOM, УзелТипов, "v8:Type", ИмяТипаXML);
		
		Если Тип = Тип("Строка") Тогда
			
			СвойствоДлинаСтроки     = Формат(ТипПоОбразцу.КвалификаторыСтроки.Длина, "ЧН=0; ЧГ=");
			СвойствоДопустимаяДлина = ?(ТипПоОбразцу.КвалификаторыСтроки.ДопустимаяДлина = ДопустимаяДлина.Переменная, "Variable", "Fixed");
			
			УзелКвалификаторов = УзелТипов.ДобавитьДочерний(ДокументDOM.СоздатьЭлемент("v8:StringQualifiers"));
			ДобавитьСвойствоУзлаDOM(ДокументDOM, УзелКвалификаторов, "v8:Length", СвойствоДлинаСтроки);
			ДобавитьСвойствоУзлаDOM(ДокументDOM, УзелКвалификаторов, "v8:AllowedLength", СвойствоДопустимаяДлина);
			
		ИначеЕсли Тип = Тип("Число") Тогда
			
			СвойствоРазрядность = Формат(ТипПоОбразцу.КвалификаторыЧисла.Разрядность, "ЧН=0; ЧГ=");
			СвойствоДопустимыйЗнак = ?(ТипПоОбразцу.КвалификаторыЧисла.ДопустимыйЗнак = ДопустимыйЗнак.Любой, "Any", "Nonegative");
			СвойствоРазрядностьДробнойЧасти = Формат(ТипПоОбразцу.КвалификаторыЧисла.РазрядностьДробнойЧасти, "ЧН=0; ЧГ=");
			
			УзелКвалификаторов = УзелТипов.ДобавитьДочерний(ДокументDOM.СоздатьЭлемент("v8:NumberQualifiers"));
			ДобавитьСвойствоУзлаDOM(ДокументDOM, УзелКвалификаторов, "v8:Digits", СвойствоРазрядность);
			ДобавитьСвойствоУзлаDOM(ДокументDOM, УзелКвалификаторов, "v8:FractionDigits", СвойствоРазрядностьДробнойЧасти);
			ДобавитьСвойствоУзлаDOM(ДокументDOM, УзелКвалификаторов, "v8:AllowedSign", СвойствоДопустимыйЗнак);
			
		ИначеЕсли Тип = Тип("Дата") Тогда
			
			Если ТипПоОбразцу.КвалификаторыДаты.ЧастиДаты = ЧастиДаты.Время Тогда
				СвойствоСоставДаты = "Time";
			ИначеЕсли ТипПоОбразцу.КвалификаторыДаты.ЧастиДаты = ЧастиДаты.Дата Тогда
				СвойствоСоставДаты = "Date";
			Иначе
				СвойствоСоставДаты = "DateTime";
			КонецЕсли;
			
			УзелКвалификаторов = УзелТипов.ДобавитьДочерний(ДокументDOM.СоздатьЭлемент("v8:DateQualifiers"));
			ДобавитьСвойствоУзлаDOM(ДокументDOM, УзелКвалификаторов, "v8:DateFractions", СвойствоСоставДаты);
			
		КонецЕсли;
		
	КонецЦикла;
	
	ТекстИсправления = НСтр("ru = 'Исправлено. Тип реквизита ""%1"" изменен на требуемый: %2.'");
	Возврат СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(ТекстИсправления, 
		ИмяРеквизита, СтрЗаменить(ТипРеквизитаСтрокой, "/", ", "));
	
КонецФункции

Функция ИзменитьЗначениеСвойства(ДокументDOM, ИмяРеквизита, ИмяСвойства, ЗначениеСвойстваСтрокой)
	
	ИмяЗначениеСвойства = СвойствоВАнглийскойНотации(ИмяСвойства, ЗначениеСвойстваСтрокой);
	Если ИмяЗначениеСвойства.Имя = Неопределено Тогда
		Возврат "";
	КонецЕсли;
	
	Выражение    = "/xmlns:MetaDataObject/xmlns:Catalog/xmlns:ChildObjects/xmlns:Attribute/xmlns:Properties/xmlns:Name[text()='"
		+ ИмяРеквизита + "']/parent::*/xmlns:" + ИмяЗначениеСвойства.Имя;
	Результат    = ВычислитьВыражениеXPath(Выражение, ДокументDOM);
	УзелСвойства = Результат.ПолучитьСледующий();
	Если УзелСвойства = Неопределено Тогда
		Возврат "";
	КонецЕсли;
	
	Для Каждого ДочернийУзел Из УзелСвойства.ДочерниеУзлы Цикл
		УзелСвойства.УдалитьДочерний(ДочернийУзел);
	КонецЦикла;
	
	УзелСвойства.ДобавитьДочерний(ДокументDOM.СоздатьТекстовыйУзел(ИмяЗначениеСвойства.Значение));
	
	ТекстИсправления = НСтр("ru = 'Исправлено. Значение свойства ""%1"" реквизита ""%2"" изменено на требуемое: ""%3"".'");
	Возврат СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(ТекстИсправления,
		ИмяСвойства, ИмяРеквизита, ЗначениеСвойстваСтрокой);
	
КонецФункции

Процедура ДобавитьСвойствоУзлаDOM(ДокументDOM, Узел, ИмяСвойства, Значение)
	
	УзелСвойства = Узел.ДобавитьДочерний(ДокументDOM.СоздатьЭлемент(ИмяСвойства));
	УзелСвойства.ДобавитьДочерний(ДокументDOM.СоздатьТекстовыйУзел(Значение));
	
КонецПроцедуры

Функция СвойствоВАнглийскойНотации(ИмяСвойства, ЗначениеСвойства)
	
	Свойство = Новый Структура("Имя, Значение");
	Если ИмяСвойства = "ПроверкаЗаполнения" Тогда
		Свойство.Имя = "FillChecking";
		Свойство.Значение = ?(ЗначениеСвойства = "ВыдаватьОшибку", "ShowError", "DontCheck");
	ИначеЕсли ИмяСвойства = "Индексирование" Тогда
		Свойство.Имя = "Indexing";
		Свойство.Значение = ?(ЗначениеСвойства = "Индексировать", "Index", "DontIndex");
	ИначеЕсли ИмяСвойства = "ПолнотекстовыйПоиск" Тогда
		Свойство.Имя = "FullTextSearch";
		Свойство.Значение = ?(ЗначениеСвойства = "Использовать", "Use", "DontUse");
	КонецЕсли;
	
	Возврат Свойство;
	
КонецФункции

